---
pageable: true
per_page: 1
---
<section id="head__box">
  <section class="head__inner">
    <article class="head__img ">
    
    </article>
    <article class="head__headline ">
      <h1>Hello there.<br />
      I'm Jeffrey Smith &mdash;<br />
      a front-end web developer<br / class="show-for-medium-only"> with a love for <br / class="show-for-large-up">design.</h1>
    </article>
    
  </section>
  
</section><!--  
<div><%= breadcrumbs(current_page) %></div>-->
<section class="blog-listing">


<% page_articles.each_with_index do |article, i| %>
  <h2><%= link_to article.title, article %> <br><span><%= article.date.strftime('%b %e') %></span></h2>
  <!-- use article.summary(250) if you have Nokogiri available to show just
       the first 250 characters -->
  <%= article.summary %>
  <%= link_to "Read More", article %>
<% end %>
<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>
<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>

</section>
